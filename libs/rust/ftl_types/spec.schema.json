{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FTL Spec File",
  "description": "FTL Spec File",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the resource."
    },
    "kind": {
      "type": "string",
      "enum": [
        "app/v0"
      ],
      "description": "The spec file type."
    },
    "spec": {
      "type": "object",
      "description": "The spec body.",
      "properties": {
        "depends": {
          "type": "array",
          "description": "A list of dependencies required by the app.",
          "items": {
            "oneOf": [
              {
                "properties": {
                  "type": {
                    "const": "service"
                  },
                  "protocol": {
                    "type": "string",
                    "description": "The service's protocol."
                  }
                },
                "required": [
                  "protocol"
                ]
              },
              {
                "properties": {
                  "type": {
                    "const": "device"
                  },
                  "device_tree": {
                    "type": "object",
                    "description": "Details of the device tree if the dependency is a device.",
                    "properties": {
                      "compatible": {
                        "type": "array",
                        "description": "List of compatible devices.",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": [
                      "compatible"
                    ]
                  }
                }
              }
            ]
          }
        },
        "provides": {
          "type": "array",
          "description": "A list of services provided by the application.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "depends",
        "provides"
      ]
    }
  },
  "required": [
    "name",
    "kind",
    "spec"
  ]
}
